# Input: number to check
num <- as.integer(readline(prompt = "Enter a number: "))
sum <- 0
temp <- num

# Calculate sum of cubes of digits
while(temp > 0){
  digit <- temp %% 10
  sum <- sum + (digit^3)
  temp <- temp %/% 10
}

# Check if number is Armstrong
if(sum == num){
  cat(num, "is an Armstrong number.\n")
} else {
  cat(num, "is not an Armstrong number.\n")
}
